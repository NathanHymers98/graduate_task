{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        <div class="row">
            <div class="sol-sm-12">
                <h1>Successful Imports</h1>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Product Code</th>
                        <th>Product Name</th>
                        <th>Product Description</th>
                        <th>Stock</th>
                        <th>Cost in GBP</th>
                        <th>Discontinued</th>
                        <th>Reason for failure (If applicable)</th>
                    </tr>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td class="bg-success">{{ product.productCode }}</td>
                            <td>{{ product.productName }}</td>
                            <td>{{ product.productDescription }}</td>
                            <td>{{ product.productStock }}</td>
                            <td>{{ product.netCost }}</td>
                            <td>{{ product.isDiscontinued }}</td>
                            <td>{{ product.reasonsForFailure }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>


                <h1>Failed Imports</h1>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Product Code</th>
                        <th>Product Name</th>
                        <th>Product Description</th>
                        <th>Stock</th>
                        <th>Cost in GBP</th>
                        <th>Discontinued</th>
                        <th>Reason for failure (If applicable)</th>
                    </tr>
                    <tbody>
                    {% for product in failedProducts %}
                        <tr>
                            <td class="bg-danger">{{ product.productCode }}</td>
                            <td>{{ product.productName }}</td>
                            <td>{{ product.productDescription }}</td>
                            <td>{{ product.productStock }}</td>
                            <td>{{ product.netCost }}</td>
                            <td>{{ product.isDiscontinued }}</td>
                            <td>{{ product.reasonsForFailure }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block loggedin %}{% endblock %}