{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">
        <div class="row">
            <div class="sol-sm-12">
                <h1>Search for a user</h1>
                <form action="">
                    <div class="input-group mb-3 mt-3">
                        <input type="text"
                               name="q"
                               class="fa fa-search form-control"
                               placeholder="Search for a user...">
                        <div class="input-group-append">
                            <button type="submit"
                                    class="btn btn-secondary">
                            </button>
                        </div>
                    </div>
                </form>

                <h1>List of Users</h1>
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                    </tr>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.username }}</td>
                            <td>{{ user.email }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}

{% block loggedin %}{% endblock %}